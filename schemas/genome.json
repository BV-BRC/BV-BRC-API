{
  "$schema": "http://json-schema.org/draft-04/hyper-schema#",
  "id": "genome#",
  "title": "Genome",
  "type": "object",
  "pathStart": "/genome",
  "links": [
    {
      "rel": "self",
      "title": "Get a genome instance",
      "method": "GET",
      "template": "default",
      "href": "/genome/{id}",
      "targetSchema": {
        "$ref": "#"
      }
    },
    {
      "rel": "query",
      "title": "Query genome instances.",
      "method": "GET",
      "href": "/genome",
      "template": "default-list",
      "targetSchema": {
        "type": "array",
        "items": {
          "$ref": "#"
        }
      }
    },
    {
      "rel": "create",
      "title": "Create genome(s).  Throw error if genome already exists.",
      "encType": "application/json",
      "method": "POST",
      "href": "/genome",
      "schema": {
        "oneOf": [
          {
            "$ref": "#"
          },
          {
            "type": "array",
            "items": {
              "$ref": "#"
            }
          }
        ]
      },
      "targetSchema": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "$ref": "#"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#"
              }
            }
          ]
        }
      }
    },
    {
      "rel": "update",
      "title": "Update genome. Partial Update OK. Throw error if genome does not exist",
      "encType": "application/json",
      "method": "POST",
      "href": "/genome/{id}",
      "schema": {
        "$ref": "#"
      },
      "targetSchema": {
        "$ref": "#"
      }
    },
    {
      "rel": "create",
      "title": "Create genome. Overwrite it if it already exists.",
      "encType": "application/json",
      "method": "PUT",
      "href": "/genome/{id}",
      "schema": {
        "$ref": "#"
      },
      "targetSchema": {
        "type": "null"
      }
    },
    {
      "rel": "delete",
      "title": "Delete a genome",
      "method": "DELETE",
      "href": "/genome/{id}",
      "schema": {
        "$ref": "#"
      },
      "targetSchema": {
        "type": "null"
      }
    },
    {
      "rel": "delete",
      "title": "Delete one ore more genome by query",
      "method": "DELETE",
      "href": "/genome/{,query*}",
      "schema": {
        "$ref": "#"
      },
      "targetSchema": {
        "type": "null"
      }
    },
    {
      "rel": "rpc",
      "title": "JSON-RPC Endpoint for the genome Model.  Parameters and Response schema as per the associated link relation.",
      "encType": "application/jsonrpc+json",
      "mediaType": "application/jsonrpc+json",
      "method": "POST",
      "href": "/genome"
    }
  ],
  "required": [
    "genome_id"
  ],
